/*
 *  VARIABLES
 */


// Chouchenn variables
$rounding               = 10
$font-types             = eot woff2 woff
$lh-base                = 7


// colors
$light                  = #ffffff
$beige                  = #f5eede
$dark                   = #000000
$dark-2                 = #292929
$grey                   = #9B9A96
$green                  = #d7cf80
$red                    = #d46f61


//
$i= 0
$tab= quad cubic quart quint sine expo circ back
$direction1= up down left right
$direction2= up-left up-right down-left down-right

// urls
$url-media              = '../media/'
$url-font               = $url-media + 'fonts/'
$url-img                = $url-media + 'img/'
$url-picto              = $url-img + 'pictos/'

// urls hd
$url-hd                 = $url-media + 'hd/'
$url-img-hd             = $url-hd + 'img/'
$url-picto-hd           = $url-img-hd + 'pictos/'


// fonts
$font-title             = edmondsans
$font                   = Georgia, 'Helvetica Neue', Helvetica, Arial, sans-serif
$font-sans-serif        = edmondsans, 'Helvetica Neue', Helvetica, Arial, sans-serif

// ABChanelCouture
// $ab-chanel-couture      = 'ABChanelCouture'
// $ab-chanel-couture-name = 'abchanel-couture'
// $font-site              = $ab-chanel-couture-name, $font-sans-serif


$font-family            = $font-sans-serif
$font-size              = 12
$fz                     = $font-size
$font-root              = rnd( $font-size / 16 * 100% )
$line-height            = rnd( 16 / $font-size )


// base colors
$text                   = $grey
$bd                     = $dark
$bg                     = $light
$placeholder            = $grey


// titles
$tt-1                   = $dark
$tt-2                   = $dark
$tt-3                   = $dark
$tt-4                   = $dark
$tt-5                   = $dark
$tt-6                   = $dark


// links
$link                   = $dark
$link-visited           = $dark
$link-hover             = $dark
$link-active            = $dark


// shadows
$shw-box                = 0 12px 25px rgba( $dark, .05 )
$shw-text               = 1px 1px 0 rgba( $dark, .4 )


// transition
$anim-dur               = .2s
$anim-easing            = ease-out
$anim-delay             = .2s
$transition             = $anim-dur $anim-easing


// images
$blank-img              = 'data:image/png;base64,'
